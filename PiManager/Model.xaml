<Window x:Class="PiManager.Model"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiManager"
        mc:Ignorable="d"
        Title="GUI-Model" Height="300" Width="303" ResizeMode="NoResize">
    <Grid>
        <GroupBox Header="Inputs" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top">
            <WrapPanel>
                <CheckBox x:Name="input1" Content="1" Margin="5,5,5,0"/>
                <CheckBox x:Name="input2" Content="2" Margin="5,5,5,0"/>
                <CheckBox x:Name="input3" Content="3" Margin="5,5,5,0"/>
                <CheckBox x:Name="input4" Content="4" Margin="5,5,5,0"/>
                <CheckBox x:Name="input5" Content="5" Margin="5,5,5,0"/>
                <CheckBox x:Name="input6" Content="6" Margin="5,5,5,0"/>
                <CheckBox x:Name="input7" Content="7" Margin="5,5,5,0"/>
                <CheckBox x:Name="input8" Content="8" Margin="5,5,5,0"/>
            </WrapPanel>
        </GroupBox>

    </Grid>
</Window>
